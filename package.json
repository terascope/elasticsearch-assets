{
    "name": "elasticsearch-assets",
    "description": "bundle of processors for teraslice",
    "version": "3.3.1",
    "private": true,
    "workspaces": [
        "packages/*",
        "asset",
        "."
    ],
    "scripts": {
        "asset:build": "yarn && yarn run build",
        "asset:post-build": "./scripts/copy-links.sh",
        "build": "tsc --build",
        "build:watch": "tsc --build --watch",
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
        "lint:fix": "yarn lint --fix",
        "setup": "yarn && yarn build --force",
        "test:all": "ts-scripts test",
        "test": "ts-scripts test . --",
        "test:6": "ELASTICSEARCH_VERSION='6.8.6' yarn run test:all",
        "test:7": "ELASTICSEARCH_VERSION='7.9.3' yarn run test:all",
        "test:8": "ELASTICSEARCH_VERSION='8.1.2' yarn run test:all",
        "test:debug": "ts-scripts test --debug . --",
        "test:legacy": "LEGACY_CLIENT=true yarn run test:all",
        "test:opensearch": "TEST_OPENSEARCH='true' yarn run test:all",
        "test:watch": "ts-scripts test --watch . --",
        "publish:changed": "./scripts/publish.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/terascope/elasticsearch-assets.git"
    },
    "author": "Terascope, LLC <info@terascope.io>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/terascope/elasticsearch-assets/issues"
    },
    "homepage": "https://github.com/terascope/elasticsearch-assets#readme",
    "engines": {
        "node": ">=14.17.0"
    },
    "dependencies": {},
    "devDependencies": {
        "@terascope/data-types": "^0.36.0",
        "@terascope/elasticsearch-api": "^3.3.0",
        "@terascope/elasticsearch-asset-apis": "^0.11.2",
        "@terascope/eslint-config": "^0.7.1",
        "@terascope/job-components": "^0.58.0",
        "@terascope/scripts": "^0.50.0",
        "@terascope/teraslice-state-storage": "^0.36.0",
        "@terascope/types": "^0.10.3",
        "@types/bluebird": "^3.5.37",
        "@types/elasticsearch": "^5.0.40",
        "@types/got": "^9.6.12",
        "@types/jest": "^29.1.2",
        "@types/node": "^18.8.2",
        "elasticsearch": "^15.4.1",
        "elasticsearch-store": "^0.63.0",
        "eslint": "^8.29.0",
        "jest": "^29.1.2",
        "jest-extended": "^3.1.0",
        "moment": "^2.29.4",
        "nock": "^13.2.9",
        "node-notifier": "^10.0.1",
        "teraslice-test-harness": "^0.28.2",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4"
    },
    "terascope": {
        "root": true,
        "testSuite": "search",
        "tests": {
            "suites": {
                "unit": [],
                "search": [
                    "elasticsearch",
                    "opensearch"
                ]
            }
        },
        "docker": {
            "registries": [
                "terascope/teraslice"
            ]
        },
        "npm": {
            "registry": "https://registry.npmjs.org/"
        }
    }
}
